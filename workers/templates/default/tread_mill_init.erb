description '<%= @application %> Tread Mill Server'

<%- @environment.each do |name, value| %>
env <%= name %>='<%= value %>'
<%- end %>

setuid <%= @deploy[:user] %>
setgid <%= @deploy[:group] %>

chdir <%= @deploy[:current_path] %>

start on [2345]
stop on [!2345]

exec /usr/local/bin/ruby /usr/local/bin/bundle exec rake tread_mill:run >> <%= deploy[:deploy_to] %>/shared/logs/tread_mill.log 2>&1
